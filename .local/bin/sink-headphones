#!/bin/sh
SOUNDCARD=$(pactl list short cards | cut -f 2 | rg -o '(pci-0000_0e_00.*)' -r '$1')

pactl set-card-profile "alsa_card.$SOUNDCARD" output:analog-stereo

HEADPHONES_SINK=$(pactl list short sinks | cut -f 2 | rg -F "alsa_output.$SOUNDCARD.analog-stereo")

pactl set-default-sink "$HEADPHONES_SINK"
