#!/bin/sh

if [ $# -eq 0 ]; then
	pactl -- set-sink-volume 0 +5%
fi

if [ $# -eq 1 ]; then
	pactl -- set-sink-volume 0 +"$1"%
fi

VOLUME_LEVEL=$(pactl get-sink-volume "@DEFAULT_SINK@" | sed -n 's/.* \([0-9]\+\)% .*/\1%/p')
dunstify -h string:x-dunst-stack-tag:volume -t 1000 "Volume $VOLUME_LEVEL ï€¨"
