#!/bin/sh

fzf_preview_command="
  echo {}	|	sd ' > ' '/' |
  xargs -I % mdcat --local %/index.md
"

cd "$XDG_DATA_HOME"/mdn/content/files/en-us/web &&
	fd index.md | sd '/index.md' '' |
	sd '/(\w)' ' > $1' |
		fzf --preview "$fzf_preview_command" --query "$*" |
		sd ' > ' '/' |
		xargs -I{} kak -e "glow {}/index.md" &&
	cd - >/dev/null || exit
